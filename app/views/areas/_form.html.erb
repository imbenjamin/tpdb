<%= form_with model: @area, local: true do |form| %>
 
  <% if @area.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@area.errors.count, "error") %> prohibited
        this area from being saved:
      </h2>
      <ul>
        <% @area.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name, size: 60 %>
  </p>
 
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description, size: "60x5" %>
  </p>

  <p>
        <%= form.label :location %><br>
        <%= form.collection_select(:location_id, Location.order(:name), :id, :name, {prompt: true}, {disabled: params[:fixed_location]})  %>
    </p>
 
  <p>
    <%= form.submit %>
  </p>
 
<% end %>